@model SistemaVotacionAutomatizada.Models.Elecciones

@{
    ViewData["Title"] = "Creación Elección";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Creación Elecciones</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="custom-control custom-switch">
                <input asp-for="Estado" type="checkbox" class="custom-control-input">
                <label asp-for="Estado" class="custom-control-label">Activo</label>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>


            <div class='form-group date'>
                <label asp-for="Fecha" class="control-label"></label>
                <input type='date' asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>

            <div class="form-group">

                <div style="margin-top:1rem;" class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" /> |
                    <a asp-action="Index">Volver a Listado</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
