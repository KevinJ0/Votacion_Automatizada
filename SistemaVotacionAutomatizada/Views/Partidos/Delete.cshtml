@model SistemaVotacionAutomatizada.Models.Partidos

@{
    ViewData["Title"] = "Eliminar Partido";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var photoPath = "~/images/" + (Model.Logo ?? "nophoto.png");
}

<h1>Eliminar Partido</h1>
<div class="alert alert-danger" role="alert">¿Está seguro que quiere eliminar?</div>
<hr />

<div class="card mb-3" style="max-width:540px;">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="@photoPath" asp-append-version="true" class="card-img" />
        </div>

        <div class="col-md-8">
            <h5 class="card-title">@Html.DisplayFor(model => model.Nombre)</h5>
            <p class="card-text">Descripción: @Html.DisplayFor(model => model.Descripcion)</p>
            <p class="card-text">Activo: @Html.DisplayFor(model => model.Estado)</p>
        </div>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Eliminar" class="btn btn-danger" /> |
    <a asp-action="Index">Volver a Listado</a>
</form>
