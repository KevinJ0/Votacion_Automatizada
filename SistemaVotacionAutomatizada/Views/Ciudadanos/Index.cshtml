@model IEnumerable<SistemaVotacionAutomatizada.Models.Ciudadanos>

@{
    ViewData["Title"] = "Ciudadanos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.InfoEleccionActiva != null)
{
    <div class="alert alert-warning">@ViewBag.InfoEleccionActiva</div>
}

<h1>Ciudadanos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Ciudadano</a>
</p>

<table class="table table-hover">
    <thead class="table-primary">
        <tr>
            <th>Cédula</th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>Activo</th>
            <th></th>
        </tr>
    </thead>

    <tbody>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <!--<a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |-->
                <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
