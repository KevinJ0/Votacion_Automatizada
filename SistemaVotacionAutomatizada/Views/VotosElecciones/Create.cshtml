@model SistemaVotacionAutomatizada.Models.VotosElecciones

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>VotosElecciones</h4>

<hr />
<p class="text-danger">@ViewBag.ViewError</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EleccionId" class="control-label"></label>
                <select asp-for="EleccionId" class ="form-control" asp-items="ViewBag.EleccionId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CandidatoId" class="control-label"></label>
                <select asp-for="CandidatoId" class ="form-control" asp-items="ViewBag.CandidatoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CiudadanoId" class="control-label"></label>
                <select asp-for="CiudadanoId" class ="form-control" asp-items="ViewBag.CiudadanoId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
