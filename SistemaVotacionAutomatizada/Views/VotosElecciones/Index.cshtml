@model IEnumerable<SistemaVotacionAutomatizada.Models.VotosElecciones>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
@if (ViewBag.InfoEleccionActiva != null)
{
    <div class="alert alert-warning">@ViewBag.InfoEleccionActiva</div>
}
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Candidato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ciudadano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Eleccion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.Candidato != null) {
                        @Html.DisplayFor(modelItem => item.Candidato.Nombre);
                        <span> </span>
                        @Html.DisplayFor(modelItem => item.Candidato.Apellido);
                    }else{
                        <span class="alert-danger">Ninguno</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ciudadano.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Eleccion.Nombre)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
